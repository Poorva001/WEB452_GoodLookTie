@model GoodLookTie.Models.TieMaterialViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Ties" asp-action="Index" method="get">
    <p>
        <select asp-for="TieMaterial" asp-items="Model.Material">
            <option value="">All</option>
        </select>
        Type: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ties[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ties[0].Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ties[0].Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ties[0].Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ties[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ties[0].Occassion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ties)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Colour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occassion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
